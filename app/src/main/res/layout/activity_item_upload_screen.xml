<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ItemUploadScreen">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_launcher_foreground"
                android:id="@+id/profileimage"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="J'aime Prisha"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:textColor="#02075d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Live. Love. Sparkle "
                    android:textStyle="italic"
                    android:textSize="18dp"
                    android:textColor="#02075d"
                    />

            </LinearLayout>




        </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:id="@+id/neworders"
            android:textSize="24dp"
            android:layout_gravity="right"
            android:text="Orders"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/itemimage"
            android:src="@drawable/ic_launcher_foreground"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:id="@+id/itemname"
            android:layout_marginLeft="40dp"
            android:hint="Enter Item Name"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/itemdesc"
            android:hint="Enter Item Description"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/itemprice"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Item Price"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/itemsellingprice"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Item Selling Price"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/itemcount"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Item Count"
            />









        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:id="@+id/submititem"
            android:textStyle="bold"
            />
    </LinearLayout>
</ScrollView>